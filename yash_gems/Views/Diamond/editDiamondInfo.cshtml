@{
    ViewData["Title"] = "Edit Diamond Info - Admin";

    Layout = "../Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-xl-6 col-md-6 mx-auto">
            <div class="bg-light w-100 my-5 rounded p-4">
                <h4>Edit Diamond</h4>
                @Model
                <form method="post" action="@Url.Action("editDiamondInfo", "Diamond")" enctype="multipart/form-data">
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="dim-addon1">DII</span>
                        <input type="text" class="form-control" placeholder="Enter Diamond ID" name="DimID" value="@Model.DimID">
                    </div>

                    <div class="input-group mb-3">
                        <select class="form-control" name="DimType">
                            <option value="">Enter Diamond Type</option>
                            @foreach (var dimtype in Model.listDimQlty)
                            {
                                var isSelected = dimtype.DimQlty == Model.DimType ? "selected=\"selected\"" : "";
                                <option value="@dimtype.DimQlty" isSelected>@dimtype.DimQlty_ID @dimtype.DimQlty</option>
                            }
                        </select>
                    </div>

                    <div class="input-group mb-3">
                        <select class="form-control" name="DimSubType">
                            <option value="">Enter Sub Type Of Diamond</option>
                            @foreach (var dimsub in Model.listDimSubQlty)
                            {
                                var isSelected = dimsub.DimSubType == Model.DimSubType ? "selected=\"selected\"" : "";
                                <option value="@dimsub.DimSubType" isSelected>@dimsub.DimSubType_ID @dimsub.DimSubType</option>
                            }

                        </select>
                    </div>

                    <div class="input-group mb-3">
                        <input type="number" class="form-control" placeholder="Enter Carat Of Diamond" name="DimCrt" value="@Model.DimCrt">
                    </div>

                    <div class="input-group mb-3">
                        <input type="number" class="form-control" placeholder="Enter Price Of Diamond" name="DimPrice" value="@Model.DimPrice">
                    </div>

                    <div class="input-group mb-3">
                        <input type="file" class="form-control" name="DimImg" onselect="@Model.DimImg">
                    </div>

                    <button class="btn btn-primary w-100 mt-2" type="submit">Update</button>
                </form>

            </div>
        </div>
    </div>
</div>