@{
    ViewData["Title"] = "Edit Diamond Quality - Admin";

    Layout = "../Shared/_LayoutAdmin.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-xl-6 col-md-6 mx-auto">
            <div class="bg-light w-100 my-5 rounded p-4">
                <h4>Edit Diamond Quality</h4>
                @Model
                <form method="post" action="@Url.Action("editDiamondQlty", "Diamond")">
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="dimql-addon1">DIQ</span>
                        <input type="text" class="form-control" placeholder="Enter ID Of Diamond Quality" aria-describedby="dimql-addon1" name="DimQlty_ID" value="@Model.DimQlty_ID">
                    </div>

                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Enter Quality Of Diamond (AD, FD, VVS, etc...)" name="DimQlty" value="@Model.DimQlty">
                    </div>

                    <button class="btn btn-primary w-100 mt-2" type="submit">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>