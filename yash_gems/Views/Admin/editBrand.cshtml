@{
    ViewData["Title"] = "Edit Brand - Admin";

    Layout = "../Shared/_LayoutAdmin.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-xl-6 col-md-6 mx-auto">
            <div class="bg-light w-100 my-5 rounded p-4">
                <h2>Edit Brand</h2>
                @Model
                <form method="post" action="@Url.Action("editBrand", "Admin")">
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="brand-addon1">BND</span>
                        <input type="text" class="form-control" placeholder="Enter Brand ID" name="Brand_ID" value="@Model.Brand_ID" required="required" aria-label="brand-Id"
                               aria-describedby="brand-addon1">
                    </div>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Enter Brand Type" name="Brand_Type" value="@Model.Brand_Type" required="required" aria-label="brand-Name">
                    </div>
                    <button class="btn btn-primary w-100 mt-2" type="submit">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>