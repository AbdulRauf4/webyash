

@{
    ViewData["Title"] = "Edit Category - Admin";

    Layout = "../Shared/_LayoutAdmin.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-xl-6 col-md-6 mx-auto">
            <div class="bg-light w-100 my-5 rounded p-4">
                <h2>Edit Category</h2>
                @Model
                <form method="post" action="@Url.Action("editCategory", "Admin")">
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="cat-addon1">CAT</span>
                        <input type="text" class="form-control" placeholder="Enter Category ID" name="Cat_ID" required="required" value="@Model.Cat_ID" aria-label="cat-Id" aria-describedby="cat-addon1">
                    </div>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Enter Category Name" name="Cat_Name" required="required" value="@Model.Cat_Name" aria-label="cat-Name">
                    </div>
                    <button class="btn btn-primary w-100 mt-2" type="submit">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>